{
  "Logging": {
    "LogLevel": {
      "Default": "Information",
      "Microsoft": "Warning",
      "Microsoft.Hosting": "Information",
      "Microsoft.AspNetCore": "Warning"
    }
  },

  "AllowedHosts": "localhost;*.myteam.holiday",

  "PermittedHosts": {
    "Whitelist": [ "*" ]
  },

  "Kestrel": {
    "EndPoints": {
      "Http": {
        "Url": "http://localhost:5000"
      },
      "Https": {
        "Url": "https://localhost:5001"
      }
    }
  },

  "BuildConfig": "DEV",

  "ConnectionStrings": {
    "DefaultConnection": "server={server_ip};user id={dbuser};password={dbpwd};database={dbname}"
  },

  "EmailConfig": {
    "EmailAddress": "server@myteam.holiday",
    "EmailHost": "smtp.myteam.holiday",
    "EmailPassword": "{pwd}"
  },

  "Auth0": {
    "Domain": "{DOMAIN}",
    "ClientId": "{CLIENT_ID}",
    "ClientSecret": "{CLIENT_SECRET}"
  }
}
